
@{
    ViewBag.Title = "ScheduleExamination";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<link href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.css" rel="stylesheet" />
<link href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css" rel="stylesheet" />

@if (ViewBag.Msg == "1")
{

    <div class="toast" data-delay="1000" style="position:fixed; top: 100PX; left: 10PX;z-index: 2000;width: 300px">
        <script>
            swal({
                title: 'Đặt lịch thành công',
                /* text: 'Redirecting...', */
                icon: 'success',
                timer: 3000,
                buttons: true,
                type: 'success'
            })
        </script>
    </div>
}

@if (TempData["message"] != null)
{
    <script src="~/Content/toastr/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>

    <script type="text/javascript">
        toastr.success('@TempData["message"]');
    </script>
}

<section>

    <form action="/Doctor/Add" method="post">
        @{ var doctors = (YTeAspMVC.Models.Doctor)Session["DOCTOR"]; }
        @{ var date = String.Format("{0:dd-MM-yyyy}", DateTime.Now);}
        <div class="form-group">
            <label class="mb-1" for="exampleFormControlInput1">Ngày làm việc</label>
            @*<input name="Date" type="date" class="form-control" id="currentDate">*@
            <input name="Date" type="text" id="datepicker" style="width: 100%; height: 38px; border: 1px solid #ccc; border-radius: 5px; padding-left: 12px;" value="@date">
        </div>

        <div class="form-group mt-3">
            <label class="mb-1" for="exampleFormControlInput1">Giờ khám bệnh</label>
            <select name="Timetype" multiple class="form-control" id="exampleFormControlSelect2">
                <option value="8:30 - 9:30">8:30 - 9:30</option>
                <option value="9:30 - 10:00">9:30 - 10:00</option>
                <option value="10:00 - 10:30">10:00 - 10:30</option>
                <option value="10:30 - 11:00">10:30 - 11:00</option>
                <option value="11:00 - 11:30">11:00 - 11:30</option>
                <option value="11:30 - 12:00">11:30 - 12:00</option>
                <option value="13:30 - 14:00">13:30 - 14:00</option>
                <option value="14:00 - 14:30">14:00 - 14:30</option>
                <option value="14:30 - 15:00">14:30 - 15:00</option>
                <option value="15:30 - 16:00">15:30 - 16:00</option>
                <option value="16:00 - 16:30">16:00 - 16:30</option>
                <option value="16:30 - 17:00">16:30 - 17:00</option>
                <option value="17:00 - 17:30">17:00 - 17:30</option>
            </select>
        </div>

        <input name="IdDoctor" type="hidden" value="@doctors.IdDoctor" />

        <div class="mt-3">
            <button class="btn btn-success" style="float:right;">Xác nhận</button>
        </div>
    </form>

    <link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>

    <script>
        $(function () {
            $("#datepicker").datepicker({
                dateFormat: "dd-mm-yy"
            });
        });
    </script>

</section>

